<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    x:Class="EducationContentApp.Resources.Styles">
    <Color x:Key="PrimaryColor">#FF0000</Color>
    <Color x:Key="DarkPrimaryColor">#800000</Color>
    <Color x:Key="LightPrimaryColor">#FF4040</Color>
    <Color x:Key="SecondaryColor">#000000</Color>
    <Color x:Key="DarkSecondaryColor">#333333</Color>
    <Color x:Key="AccentColor">#FFFFFF</Color>

    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource AccentColor}" />
        <Setter Property="FontSize" Value="16" />
    </Style>

    <Style TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource PrimaryColor}" />
        <Setter Property="TextColor" Value="{StaticResource AccentColor}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Padding" Value="10, 5" />
        <Setter Property="CornerRadius" Value="5" />
    </Style>

    <Style TargetType="Entry">
        <Setter Property="TextColor" Value="{StaticResource AccentColor}" />
        <Setter Property="BackgroundColor" Value="{StaticResource DarkSecondaryColor}" />
        <Setter Property="Margin" Value="5" />
    </Style>
</ResourceDictionary>